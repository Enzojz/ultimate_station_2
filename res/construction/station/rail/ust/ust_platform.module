local func = require "ust/func"
local coor = require "ust/coor"
local pipe = require "ust/pipe"
local ust = require "ust"
local general = require "ust/general"
local quat = require "ust/quaternion"
local dump = require "luadump"

local unpack = table.unpack
local insert = table.insert

local ma = math
local pi = ma.pi

local fitModels = {
    surface = ust.fitModel(3.3, 5, -2, true, true),
    edge = ust.fitModel(0.85, 5, -2, true, true),
}

local function basePts(arc, n)
    local radDelta = (arc.sup - arc.inf) / n
    local rads = func.map(func.seq(0, n), function(i) return arc.inf + i * radDelta end)
    local pts = func.map(rads, function(rad) return arc:pt(rad) end)
    return pts
end

local updateFn = function(result, transform, tag, slotId, addModelFn, params)
    local info = params.modules[slotId].info
    local makeData = params.modules[slotId].makeData
    
    local grid = params.grid
    local pos = info.pos
    local metadata = params.modules[slotId].metadata
    
    local isTrack = {}
    local isPlatform = {}
    local octaModules = {}
    for i = 1, 8 do
        if info.octa[i] then
            octaModules[i] = info.octa[i] and params.modules[info.octa[i]]
            isTrack[i] = octaModules[i].metadata and octaModules[i].metadata.isTrack or false
            isPlatform[i] = octaModules[i].metadata and octaModules[i].metadata.isPlatform or false
        else
            octaModules[i] = false
            isTrack[i] = false
            isPlatform[i] = false
        end
    end

    local leftConnected = isPlatform[7] and octaModules[7].info.arcs.right.radius == info.arcs.left.radius and (octaModules[7].info.arcs.right.o - info.arcs.left.o):length2() < 1e-4
    local rightConnected = isPlatform[3] and octaModules[3].info.arcs.left.radius == info.arcs.right.radius and (octaModules[3].info.arcs.left.o - info.arcs.right.o):length2() < 1e-4
    
    -- local n = ma.floor(info.arcs.center:length() / 5 + 0.5)
    -- if n == 0 then n = 1 end
    local n = 4
    
    local leftPts = basePts(info.arcs.left, n)
    local rightPts = basePts(info.arcs.right, n)
    
    local leftEdge = {}
    local rightEdge = {}
    local leftCentre = {}
    local rightCentre = {}
    
    for i = 1, n + 1 do
        local vec = (leftPts[i] - rightPts[i]):normalized()
        leftEdge[i] = leftPts[i]
        rightEdge[i] = rightPts[i]
        leftCentre[i] = leftPts[i] - vec * 0.85
        rightCentre[i] = rightPts[i] + vec * 0.85
    end
    
    for i = 1, n do
        local inf = pos.y < 0 and i or i + 1
        local sup = pos.y < 0 and i + 1 or i
        
        local centre = {
            lt = leftCentre[inf],
            rt = rightCentre[inf],
            lb = leftCentre[sup],
            rb = rightCentre[sup],
        }
        
        local left = {
            lt = leftEdge[inf],
            rt = leftCentre[inf],
            lb = leftEdge[sup],
            rb = leftCentre[sup],
        }
        
        local right = {
            lt = rightCentre[inf],
            rt = rightEdge[inf],
            lb = rightCentre[sup],
            rb = rightEdge[sup],
        }
        
        local isFirst = (pos.y >= 0 and i == 1) or (pos.y < 0 and i == 4)
        local isLast = (pos.y >= 0 and i == 4) or (pos.y < 0 and i == 1)
        
        if isLast then
            if isTrack[1] then
                table.insert(result.models, general.newModel("ust/platform/ye_centre_t_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/ye_centre_t_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.surface(centre, false)));
            elseif not info.octa[1] then
                table.insert(result.models, general.newModel("ust/platform/ye_centre_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/ye_centre_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.surface(centre, false)));
            else
                table.insert(result.models, general.newModel("ust/platform/yi_centre_tl.mdl", tag, coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/yi_centre_br.mdl", tag, coor.transZ(2) * fitModels.surface(centre, false)));
            end
        elseif isFirst then
            if isTrack[5] then
                table.insert(result.models, general.newModel("ust/platform/ye_centre_t_tl.mdl", tag, coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/ye_centre_t_br.mdl", tag, coor.transZ(2) * fitModels.surface(centre, false)));
            elseif not info.octa[5] then
                table.insert(result.models, general.newModel("ust/platform/ye_centre_tl.mdl", tag, coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/ye_centre_br.mdl", tag, coor.transZ(2) * fitModels.surface(centre, false)));
            else
                table.insert(result.models, general.newModel("ust/platform/yi_centre_tl.mdl", tag, coor.transZ(2) * fitModels.surface(centre, true)));
                table.insert(result.models, general.newModel("ust/platform/yi_centre_br.mdl", tag, coor.transZ(2) * fitModels.surface(centre, false)));
            end
        else
            table.insert(result.models, general.newModel("ust/platform/yi_centre_tl.mdl", tag, coor.transZ(2) * fitModels.surface(centre, true)));
            table.insert(result.models, general.newModel("ust/platform/yi_centre_br.mdl", tag, coor.transZ(2) * fitModels.surface(centre, false)));
        end
        
        if leftConnected then
            if isLast then
                if isTrack[1] then
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_t_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_t_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, false)));
                elseif not isPlatform[8] and isPlatform[1] then
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_x_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_x_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, false)));
                else
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, false)));
                end
            elseif isFirst then
                if isTrack[5] then
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_t_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_t_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
                elseif not isPlatform[6] and isPlatform[5] then
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_left_x_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_left_x_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
                else
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
                end
            else
                table.insert(result.models, general.newModel("ust/platform/xi_yi_left_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                table.insert(result.models, general.newModel("ust/platform/xi_yi_left_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
            end
        else
            if isLast and not isPlatform[1] then
                table.insert(result.models, general.newModel("ust/platform/xe_ye_right_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_ye_right_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(left, false)));
            elseif isFirst and not isPlatform[5] then
                table.insert(result.models, general.newModel("ust/platform/xe_ye_left_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_ye_left_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
            else
                table.insert(result.models, general.newModel("ust/platform/xe_yi_left_tl.mdl", tag, coor.transZ(2) * fitModels.edge(left, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_yi_left_br.mdl", tag, coor.transZ(2) * fitModels.edge(left, false)));
            end
        end
        
        if rightConnected then
            if isLast then
                if isTrack[1] then
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_t_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_t_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, false)));
                elseif not isPlatform[2] and isPlatform[1] then
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_left_x_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_left_x_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, false)));
                else
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_left_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, false)));
                end
            elseif isFirst then
                if isTrack[5] then
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_t_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_t_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
                elseif not isPlatform[4] and isPlatform[5] then
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_x_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_yi_right_x_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
                else
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                    table.insert(result.models, general.newModel("ust/platform/xi_ye_right_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
                end
            else
                table.insert(result.models, general.newModel("ust/platform/xi_yi_right_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                table.insert(result.models, general.newModel("ust/platform/xi_yi_right_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
            end
        else
            if isLast and not isPlatform[1] then
                table.insert(result.models, general.newModel("ust/platform/xe_ye_left_br.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_ye_left_tl.mdl", tag, coor.rotZ(pi) * coor.transZ(2) * fitModels.edge(right, false)));
            elseif isFirst and not isPlatform[5] then
                table.insert(result.models, general.newModel("ust/platform/xe_ye_right_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_ye_right_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
            else
                table.insert(result.models, general.newModel("ust/platform/xe_yi_right_tl.mdl", tag, coor.transZ(2) * fitModels.edge(right, true)));
                table.insert(result.models, general.newModel("ust/platform/xe_yi_right_br.mdl", tag, coor.transZ(2) * fitModels.edge(right, false)));
            end
        end
    end
    
    local pos = info.pos
    local metadata = params.modules[slotId].metadata
    local arcs = info.arcs
    local refArc = arcs.center
    local rad = (arcs.center.inf + arcs.center.sup) * 0.5
    local posL, posR = arcs.left:pt(rad), arcs.right:pt(rad)
    local vec = (posR - posL):normalized()
    local posC = (posR + posL) * 0.5
    local rotZ = quat.byVec(coor.xyz(1, 0, 0), vec):mRot()
    local transfPosC = rotZ * coor.trans(posC)
    
    if (info.id ~= 1) then
        insert(result.slots, {
            id = makeData(99, 0),
            transf = transfPosC * coor.transZ(1),
            type = "ust_remove",
            spacing = {0, 0, 0, 0}
        })
    end
    
    if not params.slotGrid[pos.z] then params.slotGrid[pos.z] = {} end
    if not params.slotGrid[pos.z][pos.x] then params.slotGrid[pos.z][pos.x] = {} end
    if not params.slotGrid[pos.z][pos.x - 1] then params.slotGrid[pos.z][pos.x - 1] = {} end
    if not params.slotGrid[pos.z][pos.x + 1] then params.slotGrid[pos.z][pos.x + 1] = {} end
    if not params.slotGrid[pos.z][pos.x - 1][pos.y] then params.slotGrid[pos.z][pos.x - 1][pos.y] = {} end
    if not params.slotGrid[pos.z][pos.x + 1][pos.y] then params.slotGrid[pos.z][pos.x + 1][pos.y] = {} end
    if not params.slotGrid[pos.z][pos.x][pos.y - 1] then params.slotGrid[pos.z][pos.x][pos.y - 1] = {} end
    if not params.slotGrid[pos.z][pos.x][pos.y + 1] then params.slotGrid[pos.z][pos.x][pos.y + 1] = {} end
    
    if not (info.octa.left) then
        local transf = coor.trans(coor.xyz(-metadata.width, 0, 0)) * transfPosC
        params.slotGrid[pos.z][pos.x - 1][pos.y].track = {
            id = makeData(1, 1),
            transf = transf,
            type = "ust_track",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
        params.slotGrid[pos.z][pos.x - 1][pos.y].platform = {
            id = makeData(2, 1),
            transf = transf,
            type = "ust_platform",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
    end
    
    if not (info.octa.right) then
        local transf = coor.trans(coor.xyz(metadata.width, 0, 0)) * transfPosC
        
        params.slotGrid[pos.z][pos.x + 1][pos.y].track = {
            id = makeData(1, 2),
            transf = transf,
            type = "ust_track",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
        params.slotGrid[pos.z][pos.x + 1][pos.y].platform = {
            id = makeData(2, 2),
            transf = transf,
            type = "ust_platform",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
    end
    
    if not ((pos.y < 0 and info.octa.next) or (pos.y > 0 and info.octa.prev)) then
        local bwPt = refArc.inf - 0.5 * (refArc.sup - refArc.inf)
        
        local transf = quat.byVec(coor.xyz(0, -1, 0), refArc:tangent(bwPt)):mRot() * coor.trans(refArc:pt(bwPt))
        
        params.slotGrid[pos.z][pos.x][pos.y - 1].track = {
            id = makeData(1, 3),
            transf = transf,
            type = "ust_track",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
        params.slotGrid[pos.z][pos.x][pos.y - 1].platform = {
            id = makeData(2, 3),
            transf = transf,
            type = "ust_platform",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
    end
    
    if not ((pos.y < 0 and info.octa.prev) or (pos.y > 0 and info.octa.next)) then
        local fwPt = refArc.sup + 0.5 * (refArc.sup - refArc.inf)
        local transf = quat.byVec(coor.xyz(0, 1, 0), refArc:tangent(fwPt)):mRot() * coor.trans(refArc:pt(fwPt))
        
        params.slotGrid[pos.z][pos.x][pos.y + 1].track = {
            id = makeData(1, 4),
            transf = transf,
            type = "ust_track",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
        params.slotGrid[pos.z][pos.x][pos.y + 1].platform = {
            id = makeData(2, 4),
            transf = transf,
            type = "ust_platform",
            spacing = {1.5, 1.5, 1.5, 1.5}
        }
    end

end
function data()
    return {
        availability = {
            yearFrom = 0,
            yearTo = 0,
        },
        buildMode = "SINGLE",
        cost = {
            price = 0,
        },
        description = {
            name = _("MENU_MODULE_PLATFORM"),
            description = _("MENU_MODULE_PLATFORM_DESC"),
        },
        category = {
            categories = {"platform"},
        },
        type = "ust_platform",
        order = {
            value = 260,
        },
        metadata = {
            isPlatform = true,
            typeId = 2,
            width = 5
        },
        
        updateFn = updateFn,
        
        getModelsFn = function(params)
            return {}
        end
    }

end
